{
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "cacheDirectories": [
        "client/node_modules",
        "server/node_modules"
    ],
    "scripts": {
        "dev": "concurrently \"cd server && yarn run dev\" \"cd client && yarn run dev\" ",
        "build": "yarn workspace server run build",
        "build:server": "yarn workspace server run build",
        "build:client": "yarn workspace client run build",
        "dev:server": "yarn workspace server run dev",
        "dev:client": "yarn workspace client run dev",
        "start": "yarn workspace server start"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^16.7.10",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "^4.30.0",
        "@typescript-eslint/parser": "^4.30.0",
        "concurrently": "^6.2.1",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-base": "latest",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.3.2",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.2"
    }
}